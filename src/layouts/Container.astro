---
const { bgColour, containerSize, class: additionalClass, ...rest } = Astro.props;

const baseClasses =
  containerSize === "grid"
    ? "container grid-container"
    : containerSize === "full"
    ? "container full-container"
    : "container";

const finalClasses = `${baseClasses} ${additionalClass || ""}`.trim();
---
<div
    class={finalClasses}
    style={bgColour ? `background-color: ${bgColour};` : undefined}
    {...rest}
>
    <slot />
</div>
