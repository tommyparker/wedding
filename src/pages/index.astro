---
import Layout from '../layouts/Layout.astro';
import Container from '../layouts/Container.astro';
import Navigation from '../components/Navigation.astro';

import Details from '../components/Details.astro';
import AccommodationTravel from '../components/AccommodationTravel.astro';
import FAQ from '../components/FAQ.astro';
import Menu from '../components/Menu.astro';
import RSVP from '../components/RSVP.astro';
---

<Layout>
	<Container class="min-h-svh pattern sticky top-0 -z-10">
	<h1>Marie & Tommy<br>
		27th September 2025<br>
		Symondsbury Estate</h1>
	<h2>We’re getting married<br>
		and you’re invited!</h2>
	<a href="#" class="big-button fixed bottom-12 left-12 md:bottom-16 md:left-16">RSVP</a>
	</Container>
	<Navigation/>

	<Details/>
	<AccommodationTravel/>
	<FAQ/>
	<Menu/>
	<RSVP class="z-20"/>
</Layout>